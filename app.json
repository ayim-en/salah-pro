{
  "expo": {
    "name": "Fardh",
    "slug": "fardh",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/fardh-icon.png",
    "scheme": "fardh",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ayimen.fardh",
      "appleTeamId": "UCA6F7FD9U",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show accurate prayer times for your area."
      },
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.ayimen.fardh"
        ]
      }
    },
    "notification": {
      "icon": "./assets/images/fardh-icon.png",
      "color": "#568FAF"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/fardh-icon.png",
        "monochromeImage": "./assets/images/fardh-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ayimen.fardh",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/fardh-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "enableFullScreenImage_legacy": false,
          "dark": {
            "image": "./assets/images/fardh-dark.png",
            "backgroundColor": "#1a1a2e"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Fardh to use your location to show accurate prayer times for your area.",
          "isIosBackgroundLocationEnabled": false,
          "isAndroidBackgroundLocationEnabled": false
        }
      ],
      "@bacons/apple-targets"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "bundleIdentifier": "com.ayimen.fardh.widget",
                  "targetName": "PrayerWidgets",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.ayimen.fardh"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "199db2c6-437d-4c35-9d9c-4c42d51469a0"
      }
    },
    "owner": "ayim-en"
  }
}
